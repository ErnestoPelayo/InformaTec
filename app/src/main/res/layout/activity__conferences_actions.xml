<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity_ConferencesCreate">


    <Button
        android:id="@+id/btn_saveConferences"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextInformationConference"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="121dp"
        android:text="Guardar" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="130dp"
        android:text="Nombre"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="191dp"
        android:text="Fecha"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/textView_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="-31dp"
        android:text="Ubicacion"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView_name"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="-45dp"
        android:layout_marginBottom="226dp"
        android:text="Informacion"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextNameConferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextDateConferences"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/textView3"
        android:layout_below="@+id/editTextNameConferences"
        android:layout_alignEnd="@+id/editTextNameConferences"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-233dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextUbicationConferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/editTextNameConferences"
        android:layout_marginTop="-44dp"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextInformationConference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUbicationConferences"
        android:layout_alignEnd="@+id/editTextNameConferences"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="Conferencias"
        android:textSize="30sp" />
</RelativeLayout>