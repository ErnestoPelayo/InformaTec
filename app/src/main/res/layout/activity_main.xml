<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zz"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zz"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/btnConcursos"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="131dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimary"
        android:text="Conferencias"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget" />

    <Button
        android:id="@+id/btnEventos"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="135dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/btnConcursos"
        android:background="@color/colorPrimaryDark"
        android:text="Concursos"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget" />

</RelativeLayout>